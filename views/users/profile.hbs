<div>
  <div class="row">
    <div class="col-md-4">
      <img class="img-responsive center-block mb-5" src="{{user.image}}"
        style="width: 100%; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
      <h1>{{user.name}}</h1>
      <h3>{{user.email}}</h3>
      <h3> {{commentData.length}}已評論餐廳</h3>
      <a href="/users/{{user.id}}/edit" class="btn btn-primary mt-5">edit</a>
    </div>
  </div>
</div>
<div>
  <div>
    <h3>{{commentData.length}}已評論餐廳</h3>
  </div>
  <div style="background: white; height: auto" class="d-flex flex-row bd-highlight mb-3 align-items-center flex-wrap">
    {{#each commentData}}
      <a href="/restaurants/{{this.dataValues.restaurantId}}">
      <img src="{{this.dataValues.Restaurant.dataValues.image}}" class="img-thumbnail ms-1" style="max-width: 100px; max-height: 100px;" alt="{{this.dataValues.Restaurant.dataValues.name}}">
    </a>
    {{/each}}
  </div>
</div>
